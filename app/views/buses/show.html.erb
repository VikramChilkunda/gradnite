<% provide(:title, @bus.busnum.to_s) %>

<% def message(seat) %>
    <% if(seat.user_id != nil)%>
        <% User.find_by(idnum: seat.user_id).name %>
    <% else %>
        <% "Bus #".concat(seat.bus_id, ", Seat #", seat.seatnum) %>
    <% end %>
<% end %>

