<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>
            
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
            
            <%= f.label :ID_Number %>
            <%= f.text_field :idnum, class: 'form-control', placeholder: '6 digits, ex: 123456' %>
            
            <%= f.label :Mobile_Number %>
            <%= f.text_field :mobilenum, class: 'form-control', placeholder: '10 digits, ex: 1234567890' %>
            
            <%= f.submit "Create my account", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>