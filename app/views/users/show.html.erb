<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= @user.name %><br>
                <%= @user.idnum %><br>
                <%= @user.mobilenum %><br>
                
                <% if @user.seatnum != nil %>
                    Bus#<%= @user.busnum %><br>
                    Seat#<%= @user.seatnum %><br>
                <% else %>
                    Seat not chosen<br><br>
                <% end %>
                
                <% if admin? %>
                    <strong>Administrator</strong>
                <% end %>
            </h1>
        </section>
    </aside>
</div>