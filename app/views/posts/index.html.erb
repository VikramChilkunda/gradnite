<% provide(:title, 'All posts') %>
<h1>All posts</h1>

<ul class="users">
    <table class="table table-striped">
        <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Title</th>
              <th scope="col">Message</th>
              <th scope="col">Time</th>
              <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
                <%= render post %>
            <% end %>
        </tbody>
    </table>
</ul>